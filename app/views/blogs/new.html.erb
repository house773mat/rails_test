<% if @blog.errors.any? %>
    <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with(model: @blog, local: true, url: confirm_blogs_path ) do |f| %>
  <%= f.label :title  %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.submit %>
<% end %>