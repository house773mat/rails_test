<h2>投稿ポスト一覧</h2>

<%= notice %>

<%= link_to '新しくブログをポスト', new_blog_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Action</th>
  </tr>
  <% @blogs.each do |blog| %>
    <tr>
      <td><%= blog.title %></td>
      <td><%= blog.content %></td>
      <td><%= link_to '詳細', blog_path(blog.id) %></td>
    </tr>
  <% end %>
</table>

